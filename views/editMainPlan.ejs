  <div class="container">
    <br><br><br><br>
    <h2 class="text-center">Edit Main PLan</h2><br>
    <hr>
    <form action="" method="POST">

      <div class="form-group row">
        <label for="title" class="col-sm-2 control-label">Plan</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="title" name="title" placeholder="Enter your plan" value="<%= data[0].title %>" required>
        </div>
      </div>


      <div class="form-group row">
        <label for="type" class="col-sm-2 control-label" value="<%= data[0].type %>" >Plan Type</label>
        <div class="col-sm-10">
          <select type="text" class="form-control" id="type" name="type" required>
            <option value="">Choose plan type...</option>
            <option value="Years Plan" <%= data[0].type == "Years Plan" ? "selected" : "" %> >Years Plan</option>
            <option value="Monthly Plan" <%= data[0].type == "Monthly Plan" ? "selected" : "" %> >Monthly Plan</option>
            <option value="Weekly Plan" <%= data[0].type == "Weekly Plan" ? "selected" : "" %> >Weekly Plan</option>
          </select>
        </div>
      </div>


      <div class="form-group row">
        <label for="purpose" class="col-sm-2 control-label">Purpose</label>
        <div class="col-sm-10">
          <select class="form-control" id="purpose" name="purpose" value="<%= data[0].purpose %>" required>
            <option value="">Choose purpose...</option>
            <option value"Self Improvment" <%= data[0].purpose == "Self Improvment" ? "selected" : "" %> >Self Improvment</option>
            <option value"Family" <%= data[0].purpose == "Family" ? "selected" : "" %> >Family</option>
            <option value"Social" <%= data[0].purpose == "Social" ? "selected" : "" %> >Social</option>
          </select>
        </div>
      </div>


      <div class="form-group row">
        <label for="startdate" class="col-sm-2 control-label">Date</label>
        <div class="col-sm-10">
          <div class="form-row align-items-center">
            <div class="col-auto">
              <input value="<%= util.formatEditDate(data[0].startdate) %>" type="date" class="form-control" id="startdate" name="startdate" required>
            </div>
            <div class="col-auto">
              <label for="enddate">to</label>
            </div>
            <div class="col-auto">
              <input type="date" class="form-control" id="enddate" name="enddate" value="<%= util.formatEditDate(data[0].enddate) %>" required>
            </div>
          </div>
        </div>
      </div>


      <div class="form-group row">
        <label for="notes" class="col-sm-2 control-label">Notes</label>
        <div class="col-sm-10">
          <textarea type="text" class="form-control" id="notes" name="notes" rows="8" placeholder="Enter your notes" required><%= data[0].notes %></textarea>
        </div>
      </div>

      <div class="form-group row">
        <label for="status" class="col-sm-2 control-label">Status</label>
        <div class="col-sm-10">
          <select type="text" class="form-control" id="status" name="status" required>
            <option value="On process" <%= data[0].status == "On process" ? "selected" : "" %> >On process</option>
            <option value="Success" <%= data[0].status == "Success" ? "selected" : "" %> >Success</option>
            <option value="Failed" <%= data[0].status == "Failed" ? "selected" : "" %> >Failed</option>
          </select>
        </div>
      </div>

      <button status="submit" class="btn btn-primary" style="float:right">Save Change</button>
      <a href="../../mainPlan" class="btn btn-warning" style="float:right">Cancel</a>

      <br><br><br>

    </form>
  </div>

  <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
